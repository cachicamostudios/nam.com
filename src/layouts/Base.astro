---
const { title = "√±am.com" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/global.css" />
    <style>
      :root {
        --bg: #fff;
        --fg: #111;
        --block-bg: #fff;
        --block-shadow: #111;
      }
      body.dark {
        --bg: #111;
        --fg: #fff;
        --block-bg: #181818;
        --block-shadow: #fff;
      }
      body {
        background: var(--bg);
        color: var(--fg);
        font-family: 'Inter', Arial, sans-serif;
        margin: 0;
        padding: 0;
        transition: background 0.2s, color 0.2s;
      }
      .main-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem 1.2rem 1.2rem 2rem;
        position: relative;
        background: var(--bg);
        z-index: 10;
      }
      .logo {
        display: flex;
        align-items: center;
        padding-left: 0;
        margin-top: 0;
        flex: 0 0 auto;
      }
      .logo-img {
        width: 5.5rem;
        height: auto;
        display: inline-block;
        cursor: pointer;
      }
      .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
        z-index: 20;
      }
      .toggle-darkmode {
        background: none;
        border: 3px solid var(--fg);
        border-radius: 2rem;
        padding: 0.5rem 1.2rem;
        font-size: 1.1rem;
        font-weight: 800;
        cursor: pointer;
        color: var(--fg);
        box-shadow: 4px 4px 0 var(--block-shadow);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      }
      .toggle-darkmode:hover {
        background: var(--block-shadow);
        color: var(--block-bg);
        box-shadow: 0 0 0 var(--block-shadow);
      }
      .hamburger {
        display: none;
        font-size: 2.5rem;
        background: none;
        border: 3px solid var(--fg);
        border-radius: 1rem;
        color: var(--fg);
        cursor: pointer;
        padding: 0.2rem 0.7rem 0.2rem 0.7rem;
        box-shadow: 3px 3px 0 var(--block-shadow);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        z-index: 1001;
      }
      .hamburger:hover {
        background: var(--block-shadow);
        color: var(--block-bg);
        box-shadow: 0 0 0 var(--block-shadow);
      }
      .nav-menu {
        display: flex;
        gap: 1.2rem;
        position: static;
        background: none;
        box-shadow: none;
        border: none;
        flex-direction: row;
        align-items: center;
      }
      .nav-link {
        color: var(--fg);
        text-decoration: none;
        font-size: 1.1rem;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 0.7rem;
        transition: background 0.2s, color 0.2s;
      }
      .nav-link:hover {
        background: var(--block-shadow);
        color: var(--block-bg);
      }

      @media (max-width: 800px) {
        .main-header {
          flex-direction: row;
          align-items: center;
          gap: 0;
          padding: 1rem 0.7rem 1rem 0.7rem;
        }
        .logo {
          padding-left: 0;
          flex: 0 0 auto;
        }
        .header-actions {
          justify-content: flex-end;
          gap: 0.8rem;
          padding-right: 0;
          flex: 0 0 auto;
        }
        .nav-menu {
          display: none;
          flex-direction: column;
          align-items: flex-start;
          position: absolute;
          top: 100%;
          right: 0.5rem;
          min-width: 170px;
          background: var(--block-bg);
          border: 3px solid var(--block-shadow);
          border-radius: 1.5rem;
          box-shadow: 8px 8px 0 var(--block-shadow);
          padding: 1rem 1.2rem;
          z-index: 1002;
        }
        .nav-menu.open {
          display: flex;
        }
        .hamburger {
          display: inline-block;
        }
      }
    </style>
  </head>
  <body>
    <header class="main-header">
      <div class="logo">
        <a href="/" aria-label="Inicio √±am.com">
          <img src="/logo.svg" alt="Logo neo-brutalista √±am.com" class="logo-img"/>
        </a>
      </div>
      <div class="header-actions">
        <button class="toggle-darkmode" id="toggle-dark">üåô/‚òÄÔ∏è</button>
        <button class="hamburger" id="hamburger-btn" aria-label="Abrir men√∫">&#9776;</button>
      </div>
      <nav class="nav-menu" id="nav-menu">
        <a href="/" class="nav-link">Inicio</a>
        <a href="/about" class="nav-link">Sobre m√≠</a>
        <a href="/archivo" class="nav-link">Archivo</a>
        <a href="/galeria" class="nav-link">Galer√≠a</a>
        <a href="/recetas" class="nav-link">Recetas</a>
        <a href="https://t.me/+7CGABku_I01hYmRk" target="_blank" rel="noopener" class="nav-link">Telegram</a>
      </nav>
    </header>

    <main class="main-container">
      <slot />
    </main>

    <footer class="main-footer">
      <div class="footer-col">
        <div class="footer-copy">¬© 2025 √±am.com.<br>Todos los derechos reservados.</div>
        <div class="footer-madeby">
          Hecho con <span class="footer-heart">‚ô°</span> por CACHICAMO STUDIOS LLC
        </div>
        <div class="footer-contact">
          Contacto:
          <a href="https://t.me/+7CGABku_I01hYmRk" target="_blank" rel="noopener" class="footer-icon-link">
            <img src="/telegram-logo.svg" alt="Telegram" class="footer-icon"/>
            Telegram
          </a>
        </div>
      </div>
      <div class="footer-links-row">
        <a href="/" class="footer-link">Inicio</a>
        <a href="/about" class="footer-link">Sobre m√≠</a>
        <a href="/archivo" class="footer-link">Archivo</a>
        <a href="/galeria" class="footer-link">Galer√≠a</a>
        <a href="/recetas" class="footer-link">Recetas</a>
        <a href="https://t.me/+7CGABku_I01hYmRk" target="_blank" rel="noopener" class="footer-link">Telegram</a>
      </div>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Dark mode
        const toggleBtn = document.getElementById('toggle-dark');
        toggleBtn && toggleBtn.addEventListener('click', () => {
          document.body.classList.toggle('dark');
          // (Opcional: guarda preferencia)
        });

        // Hamburguesa
        const hamburger = document.getElementById('hamburger-btn');
        const navMenu = document.getElementById('nav-menu');
        hamburger && hamburger.addEventListener('click', (e) => {
          e.stopPropagation();
          navMenu.classList.toggle('open');
        });

        // Cierra el men√∫ al hacer click fuera
        document.addEventListener('click', function (event) {
          if (navMenu && hamburger && !navMenu.contains(event.target) && !hamburger.contains(event.target)) {
            navMenu.classList.remove('open');
          }
        });
        // Al hacer click en cualquier enlace, cerrar men√∫ (solo m√≥vil)
        document.querySelectorAll('.nav-link').forEach(link => {
          link.addEventListener('click', () => {
            navMenu.classList.remove('open');
          });
        });
      });
    </script>
  </body>
</html>
