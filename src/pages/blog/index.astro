---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Base title="Blog | Ã±am.com">
  <h1>Todos los posts</h1>
  <ul class="post-list">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}/`} class="post-item">
          <span class="post-title">{post.data.title}</span>
          <span class="post-date">{post.data.pubDate.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        </a>
      </li>
    ))}
  </ul>
</Base>

<style>
  h1 {
    margin-bottom: 1.5rem;
  }
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  .post-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.8rem 1rem;
    border: 3px solid var(--fg, #111);
    border-radius: 0.7rem;
    text-decoration: none;
    color: var(--fg, #111);
    box-shadow: 4px 4px 0 var(--fg, #111);
    transition: box-shadow 0.15s;
    gap: 1rem;
  }
  .post-item:hover {
    box-shadow: 2px 2px 0 var(--fg, #111);
  }
  .post-title {
    font-weight: 700;
    font-size: 1rem;
  }
  .post-date {
    font-size: 0.85rem;
    color: #888;
    white-space: nowrap;
  }
  @media (max-width: 600px) {
    .post-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }
  }
</style>
