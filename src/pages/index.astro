---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');

// Ordenar por fecha descendente (m√°s nuevo primero)
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>√±am.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <header class="main-header">
      <div class="logo">
        <a href="/" aria-label="Inicio √±am.com">
          <img src="/logo.svg" alt="Logo neo-brutalista √±am.com" class="logo-img"/>
        </a>
      </div>
      <div class="header-actions">
        <button class="toggle-darkmode" id="toggle-dark">üåô/‚òÄÔ∏è</button>
        <button class="hamburger" id="hamburger-btn" aria-label="Abrir men√∫">&#9776;</button>
        <nav class="nav-menu" id="nav-menu">
          <a href="/" class="nav-link">Inicio</a>
          <a href="/about" class="nav-link">Sobre m√≠</a>
          <a href="/archivo" class="nav-link">Archivo</a>
          <a href="/galeria" class="nav-link">Galer√≠a</a>
          <a href="/recetas" class="nav-link">Recetas</a>
          <!-- M√°s enlaces aqu√≠ -->
        </nav>
      </div>
    </header>
    <main class="main-container">
      <div class="post-blocks">
        {sortedPosts.length === 0 && (
          <div class="no-posts">
            <p>No hay posts a√∫n. ¬°Crea tu primer post en <code>src/content/blog/</code>!</p>
          </div>
        )}
        {sortedPosts.map(post => (
          <a href={`/blog/${post.id}/`} class="post-block">
            <h2>{post.data.title ?? 'Sin t√≠tulo'}</h2>
            <p>{post.data.description ?? ''}</p>
            <span class="post-date">{post.data.pubDate ?? ''}</span>
          </a>
        ))}
      </div>
    </main>
    <footer class="main-footer">
      <div class="footer-col">
        <div class="footer-copy">¬© 2025 √±am.com.<br/>Todos los derechos reservados.</div>
        <div class="footer-madeby">
          Hecho con <span class="footer-heart">‚ô°</span> por CACHICAMO STUDIOS LLC
        </div>
        <div class="footer-contact">
          Contacto:
          <a href="https://t.me/+7CGABku_I01hYmRk" target="_blank" rel="noopener" class="footer-icon-link">
            <img src="/telegram-logo.svg" alt="Telegram" class="footer-icon"/>
            Telegram
          </a>
        </div>
      </div>
      <div class="footer-links-row">
        <a href="/" class="footer-link">Inicio</a>
        <a href="/about" class="footer-link">Sobre m√≠</a>
        <a href="https://t.me/+7CGABku_I01hYmRk" target="_blank" rel="noopener" class="footer-link">Telegram</a>
        <a href="https://instagram.com/TU_INSTAGRAM" target="_blank" rel="noopener" class="footer-link">Instagram</a>
      </div>
    </footer>
    <script>
      // Modo oscuro brutalista
      if (localStorage.getItem('dark') === '1') {
        document.body.classList.add('dark');
      }
      document.getElementById('toggle-dark').onclick = () => {
        document.body.classList.toggle('dark');
        if (document.body.classList.contains('dark')) {
          localStorage.setItem('dark', '1');
        } else {
          localStorage.removeItem('dark');
        }
      };

      // Men√∫ hamburguesa brutalista
      const btn = document.getElementById('hamburger-btn');
      const nav = document.getElementById('nav-menu');
      btn.onclick = (e) => {
        e.stopPropagation();
        nav.classList.toggle('open');
      };
      // Cierra el men√∫ si se hace click fuera o en un enlace
      window.onclick = e => {
        if (!btn.contains(e.target) && !nav.contains(e.target)) {
          nav.classList.remove('open');
        }
      };
      nav.querySelectorAll('.nav-link').forEach(link => {
        link.onclick = () => nav.classList.remove('open');
      });
    </script>
  </body>
</html>
